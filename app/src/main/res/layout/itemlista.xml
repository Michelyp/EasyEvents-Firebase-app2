<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="464dp"
        android:layout_margin="25dp"
        android:background="#E4F8CE"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/foto1"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </ImageView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tvnom"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Hola soy :"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombrePer"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/titleEv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/mensjEv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="15dp">

        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tvfech"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="El dia:"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/FechaEv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="15dp">

        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tvtime"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="A las:"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/horaEv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="15dp">

        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tvlug"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="En este lugar:"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/direccEv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="15dp">

        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/idev"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Este es el ID del evento:"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idEvent"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="15dp">

        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />


    </LinearLayout>


</androidx.cardview.widget.CardView>