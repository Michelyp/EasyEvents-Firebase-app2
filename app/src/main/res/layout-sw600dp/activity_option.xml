<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OptionActivity">
    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/confeti"
        android:id="@+id/imageViewFondo"/>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#D8141414">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="597dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:src="@drawable/logorecortado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textSize="27dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:text="¿Todavía no tienes un evento?">
        </TextView>

        <Button
            android:id="@+id/botonCrear"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/boton_redondo"
            android:padding="8dp"
            android:text="Crear evento"
            android:textColor="#fffdf9"
            android:textSize="23dp"></Button>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="27dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:text="¿Quieres ver tus eventos?">
        </TextView>

        <Button
            android:id="@+id/botonVermiev"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/boton_redondo"
            android:padding="8dp"
            android:text="Ver mis eventos"
            android:textColor="#fffdf9"
            android:textSize="23dp"></Button>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="450dp"
            android:gravity="center_horizontal"
            android:textSize="27dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginRight="28dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="28dp"
            android:text="¿También eres invitado?, escribe el ID del evento para acceder a la invitación">
        </TextView>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:id="@+id/editTextidevent"
            android:background="@drawable/border"
            android:textColor="#fff"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#ccc"
            android:singleLine="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:inputType="text">
        </EditText>

        <Button
            android:id="@+id/botonSoyInvitado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/boton_redondo"
            android:padding="8dp"
            android:text="Ir a la invitación"
            android:textColor="#fffdf9"
            android:textSize="23dp"></Button>




        <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tv_response_get" android:layout_marginTop="15dp" android:visibility="gone"/>

    </LinearLayout>
</RelativeLayout>