<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Inicio">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/confeti"
        android:id="@+id/imageViewFondo"/>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#D8141414">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="432dp"
            android:layout_height="265dp"
            android:layout_gravity="center"
            android:src="@drawable/logorecortado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="500dp"
            android:gravity="center_horizontal"
            android:textSize="28dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:text="Inicia sesiÃ³n o registrate para poder crear tu evento">
        </TextView>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:id="@+id/botonregisinicia"
            android:background="@drawable/boton_redondo"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="#fffdf9"
            android:text="IR"
            android:layout_marginTop="15dp">
        </Button>



        <TextView
            android:layout_height="wrap_content"
            android:layout_width="500dp"
            android:gravity="center_horizontal"
            android:textSize="28dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:text="Soy invitado"
            android:layout_marginTop="15dp">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textSize="23dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:text="Por favor introduce el ID del evento"
            android:layout_marginBottom="10dp">
        </TextView>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:id="@+id/editTextCodigoEvento"
            android:background="@drawable/border"
            android:textColor="#fff"
            android:layout_marginRight="90dp"
            android:textSize="28dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#ccc"
            android:singleLine="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:inputType="text">
        </EditText>

        <Button
            android:id="@+id/botonInvitado"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:background="@drawable/boton_redondo"
            android:text="Ir a mi evento"
            android:textColor="#fffdf9"
            android:textSize="25dp"></Button>

        <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tv_response_get" android:layout_marginTop="15dp" android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>