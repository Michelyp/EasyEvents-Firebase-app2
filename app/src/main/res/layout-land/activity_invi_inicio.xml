<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="40dp"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="25dp"
        android:background="#E4F8CE"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/foto1"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </ImageView>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/tvnomver"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:text="Hola soy :"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/nombrePerver"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </TextView>
        <TextView
            android:id="@+id/titleEvver"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </TextView>
        <TextView
            android:id="@+id/mensjEvver"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/tvfechver"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:text="El dia:"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/FechaEvver"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/tvtimever"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:text="A las:"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/horaEvver"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/tvlugver"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:text="En este lugar:"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/direccEvver"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/idevverr"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:text="Este es el ID del evento:"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/idEventver"
            android:textColor="#0E0E0E"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>


    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>